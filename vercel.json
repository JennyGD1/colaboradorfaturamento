{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
        // Remova a propriedade "base" se a adicionou, pois ela pode conflitar.
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  // Este comando Ã© o que garante que o NPM encontre os package.json nas subpastas
  "installCommand": "npm install --prefix frontend && npm install --prefix api"
}
